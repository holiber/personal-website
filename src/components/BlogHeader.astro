---
import WordColor from './ui/WordColor.astro';

interface Props {
  title: string;
  date?: string;
  readTime?: string;
}

const { title, date, readTime } = Astro.props as Props;
---

<div class="mb-8">
  <h1 class="text-3xl lg:text-4xl font-bold font-code text-white mb-2">
    <WordColor text={title} wordsPerColor={2} />
  </h1>
  <div class="flex items-center gap-4 text-gray-400">
    
    { (date || readTime) && (
      <>
        <i class="fas fa-calendar-alt"></i>
        {date && <span>{date}</span>}
        {date && readTime && <span>|</span>}
        {readTime && <span>{readTime}</span>}
      </>
    )}
  </div>
</div>