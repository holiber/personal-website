---
import type { PageContent } from '../data/dataPage';

interface Props {
  page: PageContent;
}

const { page } = Astro.props as Props;
---

<section class="py-16 px-6 lg:px-12 max-w-6xl mx-auto relative z-10">
  <!-- Terminal Window -->
  <div class="bg-gray-950 rounded-lg border border-gray-800 terminal-shadow overflow-hidden">
    <!-- Terminal Header -->
    <div class="bg-gray-800 p-4 flex items-center gap-2">
      <div class="flex gap-1">
        <div class="w-3 h-3 bg-red-500 rounded-full"></div>
        <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
        <div class="w-3 h-3 bg-green-500 rounded-full"></div>
      </div>
      <div class="text-xs text-gray-400 font-code ms-auto">
        <span class="text-green-400">Update:</span> {page.lastUpdated}
      </div>
    </div>
    <!-- Content -->
    <div class="p-8">
      <!-- Header -->
      <div class="mb-12 text-center" data-animate="fadeInUp" data-delay="100">
        <h1 class="text-3xl lg:text-4xl font-bold font-code text-white mb-4">
          {page.title}
        </h1>
        <p class="text-gray-400 max-w-2xl mx-auto">
          {page.subtitle}
        </p>
      </div>
      <!-- Post Content -->
      <div class="relative post-content" data-animate="fadeInUp" data-delay="200">
        <div set:html={page.content} />
      </div>
    </div>
  </div>
</section>