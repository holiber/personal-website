---
interface Props {
  class?: string;
  dataAnimate?: string;
  dataDelay?: number | string;
}

const { class: className = '-bottom-4 left-10', dataAnimate = 'fadeInUp', dataDelay = 200 } = Astro.props;
---

<div class={`absolute w-12 h-16 ${className}`}
  data-animate={dataAnimate}
  data-delay={dataDelay}
>
  <div class="absolute -right-4 top-6 h-8 w-8 border-4 border-gray-700 rounded-r-full"></div>
  <div class="absolute bottom-0 w-full h-10 bg-gray-700 rounded-b-lg"></div>
  <div class="absolute bottom-8 w-full h-8 bg-gray-600 rounded-lg">
    <div class="absolute inset-1 rounded-lg bg-gradient-to-b from-amber-700 to-amber-900"></div>
  </div>
  <div class="absolute w-6 h-1 bg-white/20 rounded-full left-3 top-3"></div>
  <!-- steam -->
  <div class="absolute w-1.5 h-4 bg-white bg-opacity-30 rounded-full left-4 -top-2 steam steam1"></div>
  <div class="absolute w-1.5 h-4 bg-white bg-opacity-30 rounded-full left-6 -top-4 steam steam2"></div>
  <div class="absolute w-1.5 h-4 bg-white bg-opacity-30 rounded-full left-8 -top-3 steam steam3"></div>
  <!-- glass -->
  <div class="absolute left-2 bottom-3 text-[8px] tracking-widest">
    COFFEE
  </div>
</div>