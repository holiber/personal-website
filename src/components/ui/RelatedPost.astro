---
interface Props {
  title: string;
  excerpt: string;
  image: string;
  url: string;
  date: string;
}

const { title, excerpt, image, url, date } = Astro.props as Props;
---

<a 
  href={url} 
  class="bg-gray-950 rounded-lg border border-gray-800 flex flex-col md:flex-row gap-4 related-card overflow-hidden transition-transform"
>
  <img 
    src={image} 
    alt={title} 
    class="w-full md:w-1/4 object-cover" 
  />
  <div class="p-6 flex-1">
    <h4 class="text-lg font-bold font-code text-white mb-1">{title}</h4>
    <p class="text-gray-300 text-sm">{excerpt}</p>
    <div class="flex items-center gap-2 text-gray-400 text-sm mt-2">
      <i class="fas fa-calendar-alt"></i>
      <span>{date}</span>
    </div>
  </div>
</a>