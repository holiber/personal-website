---
import type { ProjectItemType } from '../../models';
import Icon from './Icon.astro';

interface Props {
  project: ProjectItemType;
  index: number;
}

const { project, index } = Astro.props;

---
<div
class="bg-gray-950 rounded-lg overflow-hidden border border-gray-800 shadow-lg hover:shadow-xl transition-shadow transform hover:-translate-y-1 cursor-pointer" 
data-animate="fadeInUp"
data-delay={(index + 1) * 100}
onclick={`window.location.href = '/projects/${project.slug}'`}>
  <img
    src={project.image}
    alt={project.title}
    class="w-full h-48 object-cover"
  />
  <div class="p-6">
    <h3 class="text-xl font-bold font-code text-white mb-2 flex items-center gap-2">
      <Icon name={project.icon} className="text-green-400 led-glow" />
      {project.title}
    </h3>
    <p class="text-gray-300 mb-4">{project.description}</p>
    <div class="flex flex-wrap gap-2 mb-4">
      {project.tags.map((tag) => (
        <span
          class="px-2 py-1 bg-gray-700/20 text-gray-300 rounded-full text-sm"
        >
          {tag}
        </span>
      ))}
    </div>
    <div class="flex gap-4">
      {project.links.map((link) => (
        <a href={link.href}
          target="_blank"
          class="text-gray-400 hover:text-green-400 transition-colors"
          onclick="event.stopPropagation()">
          <Icon name={link.icon} className="text-xl" />
        </a>
      ))}
    </div>
  </div>
</div>