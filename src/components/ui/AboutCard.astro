---

export interface AboutCardProps {
  description: string;
  stats: {
    label: string;
    value: number;
    suffix?: string;
  }[];
}

interface Props extends AboutCardProps {}

const { description, stats } = Astro.props as Props;
---

<div class="bg-gray-950 rounded-lg p-6 border border-gray-800 shadow-lg">
  <h3 class="text-xl font-bold font-code text-white mb-4 flex items-center gap-2">
    <i class="fas fa-user text-green-400"></i> Who I Am
  </h3>
  <p class="text-gray-300 mb-4 leading-relaxed">{description.split('\n')[0]}</p>
  <p class="text-gray-300 leading-relaxed">{description.split('\n')[1]}</p>
  <div class="mt-6 grid grid-cols-3 gap-2 text-center">
    {stats.map((stat: typeof stats[number], index: number) => (
      <div class="bg-gray-700/20 p-3 rounded" data-animate="fadeInUp" data-delay={100 + index * 100}>
        <div
          class="text-2xl font-bold text-green-400"
          data-counter={stat.value}
          data-suffix={stat.suffix || ""}
          data-duration="2000"
        >
          0{stat.suffix || ""}
        </div>
        <div class="text-xs text-gray-400">{stat.label}</div>
      </div>
    ))}
  </div>
</div>