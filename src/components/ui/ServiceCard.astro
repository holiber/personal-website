---
interface ServiceCardProps {
    title: string;
    icon: string;
    description: string;
    skills: string[];
    delay: string;
}

const { title, icon, description, skills, delay } = Astro.props as ServiceCardProps;
---

<div class="bg-gray-950/50 p-6 rounded-lg border border-gray-800 command-hover transition-all duration-300" data-animate="fadeInUp" data-delay={delay}>
  <h3 class="text-xl font-bold font-code text-white mb-3 flex items-center gap-2">
    <i class={`${icon} text-green-400 led-glow`}></i>
    $ {title.toLowerCase().replace(/\s+/g, '_')}
  </h3>
  <p class="text-gray-300 mb-4">
    {description}
  </p>
  <div class="flex flex-wrap gap-2">
    {skills.map((skill: string) => (
      <span class="px-3 py-1 bg-gray-700/20 text-gray-300 rounded-full text-sm">{skill}</span>
    ))}
  </div>
</div>