---
import Logo from './ui/Logo.astro';
import NavLink from './ui/NavLink.astro';
import SocialLinks from './ui/SocialLinks.astro';

export interface FooterContentType {
  description: string;
  navLinks: { icon: string; href: string; text: string }[];
  socialLinks: { icon: string; href: string }[];
  newsletter: {
    title: string;
    description: string;
    placeholder: string;
    buttonText: string;
    buttonIcon: string;
  };
  footerLinks?: { text: string; href: string }[];
  copyright: string;
}

const footerContent: FooterContentType = {
  description:
    'Crafting digital experiences with creativity, and a passion for innovation.',
  navLinks: [
    // { icon: 'fa fa-user', href: '/about', text: 'About' },
    { icon: 'fa fa-code', href: '/projects', text: 'Projects' },
    // { icon: 'fa fa-gear', href: '/services', text: 'Services' },
    // { icon: 'fa fa-dollar', href: '/pricing', text: 'Pricing' },
    { icon: 'fa fa-blog', href: '/blog', text: 'Blog' },
    { icon: 'fa fa-envelope', href: '/contact', text: 'Contact' },
  ],
  socialLinks: [
    { icon: 'fab fa-github', href: 'https://github.com/' },
    { icon: 'fab fa-linkedin', href: 'https://linkedin.com/in/' },
    // { icon: 'fab fa-twitter', href: 'https://twitter.com/' },
    // { icon: 'fab fa-dev', href: 'https://dev.to/' },
  ],
  newsletter: {
    title: 'Newsletter',
    description: 'Stay updated with my latest projects and tech insights.',
    placeholder: 'Enter your email',
    buttonText: 'Subscribe',
    buttonIcon: 'fas fa-paper-plane',
  },
  footerLinks: [
    { text: 'Privacy Policy', href: '/privacy' },
    { text: 'Terms of Service', href: '/terms' },
  ],
  copyright: 'Alex Nazarov & John Peterson',
};
---

<footer class="bg-dark py-16 relative overflow-hidden">
  <div class="absolute inset-0 bg-hero opacity-[.03]"></div>
  <div class="max-w-6xl mx-auto px-6 lg:px-12 relative">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
      <div class="md:col-span-2 flex flex-col items-center md:items-start">
        <Logo className="mb-4" />
        <p class="text-gray-400 text-left lg:pe-16">
          {footerContent.description}
        </p>
        <div class="mt-4">
          <SocialLinks />
        </div>
      </div>
      <div class="flex flex-col">
        <h3 class="text-lg font-bold font-code text-white mb-4"><i class="fas fa-link text-green-400"></i> Quick Links</h3>
        <ul class="space-y-3">
          {footerContent.navLinks.map((link) => (
            <li>
              <NavLink
                icon={link.icon}
                href={link.href}
                text={link.text}
                className="text-gray-400 hover:text-green-400"
              />
            </li>
          ))}
        </ul>
      </div>
      <!-- Newsletter -->
      <div>
        <h3 class="text-xl font-bold font-code text-white mb-6 flex items-center gap-2">
          <i class="fas fa-envelope text-green-400"></i> {footerContent.newsletter.title}
        </h3>
        <p class="text-gray-300 mb-4">{footerContent.newsletter.description}</p>
        <form class="space-y-3">
          <input
            type="email"
            placeholder={footerContent.newsletter.placeholder}
            class="w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded-lg text-gray-300 focus:outline-none focus:border-green-400 transition-colors"
          />
          <button
            type="submit"
            class="w-full px-4 py-2 bg-green-500 text-gray-900 font-bold rounded-lg hover:bg-green-600 transition-colors flex items-center justify-center gap-2"
          >
            <i class={footerContent.newsletter.buttonIcon}></i> {footerContent.newsletter.buttonText}
          </button>
        </form>
      </div>
    </div>
    <!-- Copyright -->
    <div class="mt-12 pt-8 border-t border-gray-800 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-gray-300 text-sm">
        Â© {new Date().getFullYear()} {footerContent.copyright} Crafted with{' '}
        <i class="fas fa-heart text-green-400"></i> and{' '}
        <i class="fas fa-coffee text-green-400"></i>.
      </p>
      <div class="flex gap-6 text-gray-300 text-sm">
        {footerContent.footerLinks?.map((link) => (
          <a href={link.href} class="hover:text-green-400 transition-colors">{link.text}</a>
        ))}
      </div>
    </div>
  </div>
</footer>
<button
      id="back-to-top"
      class="fixed bottom-6 end-6 bg-gray-800 border border-green-600 font-bold size-10 flex items-center justify-center rounded-full opacity-0 invisible transition-all duration-300 z-50"
      style="display: none;"
      title="Back to Top"
    >
      <svg
        class="size-6 mx-auto"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M5 10l7-7m0 0l7 7m-7-7v18"
        ></path>
    </svg>
</button>